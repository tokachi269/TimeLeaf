{
    "configurations": [
        
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend/main.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=5000",
                "--cert=backend/sample.crt",
                "--key=backend/sample.key"
            ],
            "jinja": true
        }
    ]
}